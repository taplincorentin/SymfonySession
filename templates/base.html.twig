<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        <link rel="stylesheet" href="/styles/app.css">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <div class="menu">
            <a href="{{ path('app_session') }}">SESSIONS</a>
            <a href="{{ path('app_stagiaire') }}">FORMATEURS/STAGIAIRES</a>
            <a href="{{ path('new_session') }}">+SESSION</a>
            <a href="{{ path('new_formateur') }}">+FORMATEUR</a>
            <a href="{{ path('new_stagiaire') }}">+STAGIAIRE</a>
            <a href="{{ path('new_module') }}">+MODULE</a>
        
         

            {% if is_granted("ROLE_ADMIN") %} <!-- only admin can go to registration page -->
                <a href="{{ path('app_register') }}">NOUVEAU COMPTE</a>
            {% endif %}

            <a href="{{ path('app_logout') }}">DECONNEXION</a>

        </div>

        {% block body %}{% endblock %}
    </body>
</html>
