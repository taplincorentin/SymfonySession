{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="form">
        <h1>Register</h1>
        <p>Remplissez le formulaire pour cr√©er un nouveau compte utilisateur</p>

        <hr>
    
        {{ form_errors(registrationForm) }}

