{% extends 'base.html.twig' %}

{% block title %}Détail Stagiaire{% endblock %}

{% block body %}

    <a href="{{ path('edit_stagiaire', {'id': stagiaire.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
    <a href="{{ path('delete_stagiaire', {'id': stagiaire.id}) }}"><i class="fa-solid fa-trash"></i></a>

    <div class="stagiaireInfo">
        <h1>{{ stagiaire }}</h1>
        <p>Sexe : {{stagiaire.sexe}}</p>
        <p>Date de naissance : {{stagiaire.dateNaissance | date('d/m/Y')}}</p>
        <p>Ville : {{stagiaire.ville}}</p>
        <p>Email : {{stagiaire.email}}</p>
        <p>Téléphone : {{stagiaire.telephone}}</p>
    </div>

    <div class="stagiaireSessions">
        <h3>Prochaines sessions</h3>
        {% for session in stagiaire.sessions %}
        
            <p><a href="{{ path('show_session', {'id': session.id}) }}">{{ session }}</a> du {{session.dateDebut | date('d/m/Y') ~ ' au ' ~ session.dateFin | date('d/m/Y') }}</p>
        
        {% endfor %}
    </div>
    

{% endblock %}